# Django Election Voting System - Environment Variables Template
# Copy this file to .env.github and fill in your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here

# GitHub Storage Configuration (Required for image uploads)
GITHUB_TOKEN=your_github_token_here
GITHUB_IMAGES_REPO=yourusername/your-repo-name
GITHUB_IMAGES_BRANCH=main
USE_GITHUB_STORAGE=true

# Database (for production deployment platforms like Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security (for production)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
